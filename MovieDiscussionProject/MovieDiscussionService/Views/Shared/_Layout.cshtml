<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MovieForum</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #1a1f36, #3a0ca3, #7209b7);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        nav.navbar {
            background: linear-gradient(90deg, #000428, #004e92);
        }

        footer {
            margin-top: auto;
            background: #0b132b;
            color: #adb5bd;
            padding: 20px 0;
        }

            footer a {
                color: #adb5bd;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold d-flex align-items-center" href="@Url.Action("Index", "Discussion")">
                <i class="bi bi-film me-2"></i> MovieForum
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    @if (Session["email"] != null)
                    {
                        var email = Session["email"].ToString().ToLower();
                        var usersTable = Common.Storage.GetTable("Users");
                        var entity = usersTable.Execute(
                            Microsoft.WindowsAzure.Storage.Table.TableOperation.Retrieve<Common.Models.UserEntity>("User", email)
                        ).Result as Common.Models.UserEntity;

                        if (entity != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <img src="@entity.PhotoUrl"
                                         onerror="this.src='/Content/no-avatar.png';"
                                         class="rounded-circle me-2 border border-2 border-white"
                                         style="width:40px;height:40px;object-fit:cover;" />
                                    <span class="fw-semibold">@entity.FullName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("EditProfile", "Account")">
                                            <i class="bi bi-person-circle me-2"></i> Profile
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="nav-item">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-light btn-sm">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Glavni sadržaj -->
    <main class="container py-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center">
        <div class="container">
            <p class="mb-1">&copy; @DateTime.Now.Year - MovieForum</p>
            <small>
                <a href="@Url.Action("Index", "Discussion")">Home</a> ·
                <a href="@Url.Action("Login", "Account")">Login</a> ·
                <a href="@Url.Action("Register", "Account")">Register</a>
            </small>
        </div>
    </footer>

    <!-- Bootstrap 5 Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
