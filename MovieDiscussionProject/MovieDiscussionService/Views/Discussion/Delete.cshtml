@model Common.Models.DiscussionEntity

@{
    ViewBag.Title = "Delete Discussion";
}

<div class="d-flex align-items-center justify-content-center min-vh-100 py-5"
     style="background: linear-gradient(135deg,#7209b7,#4361ee,#4cc9f0);">

    <!-- Card -->
    <div class="card border-0 shadow-lg rounded-4 p-5"
         style="width: 600px; background: #e3f2fd;">

        <!-- Header -->
        <div class="text-center mb-4 text-dark">
            <div class="mb-3">
                <i class="bi bi-trash" style="font-size: 3rem; color: #dc3545;"></i>
            </div>
            <h2 class="fw-bold text-danger">Delete Discussion</h2>
            <p class="opacity-75">This action cannot be undone!</p>
        </div>

        <!-- Warning -->
        <div class="alert alert-warning text-center fw-semibold rounded-3 shadow-sm">
            Are you sure you want to permanently delete this discussion?
        </div>

        <!-- Discussion details -->
        <div class="mb-4 text-dark">
            <p><strong>🎬 Movie:</strong> @Model.MovieTitle</p>
            <p><strong>📅 Year:</strong> @Model.Year</p>
            <p><strong>🏷️ Genre:</strong> @Model.Genre</p>
        </div>

        <!-- Form -->
        @using (Html.BeginForm("Delete", "Discussion", FormMethod.Post, new { @class = "d-flex justify-content-between gap-3" }))
        {
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-danger w-50 py-2 rounded-pill fw-bold shadow-sm">
                <i class="bi bi-exclamation-triangle me-2"></i> Yes, Delete
            </button>

            <a href="@Url.Action("Index", "Discussion")"
               class="btn btn-secondary w-50 py-2 rounded-pill fw-bold shadow-sm">
                <i class="bi bi-x-circle me-2"></i> Cancel
            </a>
        }
    </div>
</div>
